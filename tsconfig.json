{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["ESNext", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strictPropertyInitialization": false,
    "strictNullChecks": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@ui/*": ["ui/*"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src", "ui"],
  "exclude": ["node_modules"]
}
